<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/client_header_view"
    android:paddingStart="6dp"
    android:paddingEnd="1dp"
    android:paddingTop="46dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bottom_curved_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/client_header_account_image_view"
        android:src="@drawable/ic_action_holder_account"
        android:layout_gravity="center_vertical"
        android:layout_width="72dp"
        android:layout_height="72dp"/>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/client_header_user_name_text_view"
            android:textColor="@color/txt_color"
            android:text=""
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/client_header_rating_text_view"
                android:textColor="@color/txt_color"
                android:text="1.0"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
